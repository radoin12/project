<style>
  a{
      text-decoration: none;
      color: white;
    }
    input[type=text], select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    button,button[type=submit] {
      width: 30%;
      background-color: rgb(233, 193, 193);
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    h1{
        color:  rgba(0, 0, 0, 0.421);
        text-align: center;
    }
    div {
      border-radius: 5px;
      background-color: #f2f2f2;
      padding: 20px;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      text-align: left;
      padding: 8px;
      color:  rgba(0, 0, 0, 0.421);
    }
    
    tr:nth-child(even){background-color: rgba(243, 177, 177, 0.434)}
    
    th {
      background-color: rgb(233, 193, 193);
      color:  rgba(0, 0, 0, 0.421);
    }
    
    </style>
  <body>
      <div>
      <form action="/deleteAll" method="post">
        <button type='submit' >Deleteall</button>
      </form>
            <h1>-Create new category-</h1>
            <form  method="POST">
               <input type="text" name="category" placeholder="Category" <% if(keyUpdate!=null){%>value="<%=keyUpdate.category %>"<% }%> >
               <input type="text" name="location" placeholder="Category" <% if(keyUpdate!=null){%>value="<%=keyUpdate.location %>"<% }%> >
               <button type="submit">Submit</button>
            </form>
              <table>
                <tr>
                 <%if(categ.length>0) {%><th>Category Name</th>
                  <th>location Name</th>
                  <th>Update</th>
                  <th>Delete</th><%}%>
                </tr>
                <% for (let index in categ){%>
                <tr>
                  <td><%=categ[index].category%></td>
                  <td><%=categ[index].location%></td>
                  <td> <button><a href="/category/<%=categ[index]._id%>">Edit</a></button></td>
                  <td> <button ><a href="/delete/<%=categ[index]._id%>">Delete</a></button></td>
                </tr>
                <%}%>
              </table>
      </div>
